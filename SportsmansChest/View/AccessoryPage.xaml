<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SportsmansChest.View.AccessoryPage"
             Title="Accessories">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add"
                     Clicked="AddToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <!--Delete the stacklayout X:Name at the end cleanup-->
    <StackLayout x:Name="createdAccessories" VerticalOptions="CenterAndExpand">
        <SearchBar Placeholder="Search..." TextChanged="SearchBar_TextChanged"/>
        <ListView x:Name="accessoryListView" ItemSelected="accessoryListView_ItemSelected" SeparatorVisibility="Default">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell IsEnabled="True">
                        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                            <Label Text="{Binding Manufacturer}" FontSize="Medium" TextColor="Blue" VerticalOptions="Center"/>
                            <Label Text="{Binding Model}" FontSize="Medium" TextColor="Blue" VerticalOptions="Center"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
