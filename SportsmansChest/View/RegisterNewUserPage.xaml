<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SportsmansChest.View.RegisterNewUserPage"
             Title="User Registration">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel"
                     Clicked="CancelButton_Clicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
         <StackLayout VerticalOptions="Center" Margin="20">
            <Label Text="The Sportsman's Chest"
                   Margin="0, 0, 0, 80"
                   FontSize="Title"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>

            <Entry x:Name="username" Placeholder="Username" FontSize="Medium" Margin="0, 0, 0, 10"/>
            <Entry x:Name="password" Placeholder="Password" FontSize="Medium" Margin="0,0,0,10"/>
            <Entry x:Name="confirmPassword" Placeholder="Confirm Password" FontSize="Medium"/>

            <Button Text="Register User"
                    Clicked="RegisterUserButton_Clicked"
                    Margin="0, 30, 0, 0"
                    HeightRequest="60"
                    BackgroundColor="{StaticResource blueColorForButton}"
                    TextColor="{StaticResource white}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
